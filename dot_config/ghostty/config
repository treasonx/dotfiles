# Font Configuration
font-family = JetBrains Mono
font-size = 12

# Color Scheme - Catppuccin Mocha
theme = catppuccin-mocha

# Background Image
background-image = /home/james/.config/ghostty/a_drawing_of_a_bear_and_a_campfire.png
background-opacity = 0.7
background-image-opacity = 0.5
background-image-fit = cover

# Window Configuration
window-padding-x = 4
window-padding-y = 4
window-decoration = false
window-theme = ghostty

# Tab bar â€” minimal catppuccin mocha styling
gtk-wide-tabs = false
gtk-toolbar-style = flat
gtk-custom-css = ~/.config/ghostty/style.css

# Cursor Configuration
cursor-style = block
cursor-style-blink = true

# Inactive pane dimming
unfocused-split-opacity = 0.6

# Mouse behavior
mouse-hide-while-typing = true

# Clipboard
clipboard-read = "allow"
clipboard-paste-protection = false

# Keybindings
keybind = shift+enter=text:\n
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+-=new_split:down
keybind = ctrl+shift+\=new_split:right
