#!/usr/bin/env python3
"""Find and print full path to a file via fzf.

Useful with command substitution: git add $(fp myfile)
"""

import shutil
import subprocess
import sys


def find_files(pattern: str) -> str:
    if shutil.which("fd"):
        cmd = ["fd", "--type", "f", pattern]
    elif shutil.which("fdfind"):
        cmd = ["fdfind", "--type", "f", pattern]
    else:
        cmd = ["find", ".", "-type", "f", "-name", f"*{pattern}*"]
    return subprocess.run(cmd, capture_output=True, text=True).stdout


def main():
    if len(sys.argv) < 2:
        print("Usage: fp <partial-filename>", file=sys.stderr)
        sys.exit(1)

    files = find_files(sys.argv[1])
    if not files.strip():
        sys.exit(1)

    result = subprocess.run(
        ["fzf", "--select-1", "--exit-0"],
        input=files, capture_output=True, text=True,
    )
    if result.stdout.strip():
        print(result.stdout.strip())


if __name__ == "__main__":
    main()
