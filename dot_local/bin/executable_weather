#!/usr/bin/env python3
"""Display weather via rustormy."""

import os
import subprocess
import sys

from j_lib import JParser

parser = JParser(description="Display weather via rustormy")
parser.run()

lat = os.environ.get("WEATHER_LAT")
lon = os.environ.get("WEATHER_LON")

if not lat or not lon:
    print("Set WEATHER_LAT and WEATHER_LON in ~/.config/zsh/zshrc.local")
    sys.exit(1)

subprocess.run(["rustormy", "--lat", lat, "--lon", lon, "--colors", "-u", "imperial"])
